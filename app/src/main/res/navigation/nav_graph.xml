<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/productListFragment">

    <fragment
        android:id="@+id/productListFragment"
        android:name="com.example.task.presentation.ui.productlist.fragments.ProductListFragment"
        android:label="Products List"
        tools:layout="@layout/fragment_product_list">
        <action
            android:id="@+id/action_productListFragment_to_scanBarcodeFragment"
            app:destination="@id/scanBarcodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/scanBarcodeFragment"
        android:name="com.example.task.presentation.ui.scanproduct.fragments.ScanProductFragment"
        android:label="Scan Product"
        tools:layout="@layout/fragment_scan_product">

        <action
            android:id="@+id/action_scanBarcodeFragment_to_expiredProductsFragment"
            app:destination="@id/expiredProductsFragment" />
    </fragment>
    <fragment
        android:id="@+id/expiredProductsFragment"
        android:name="com.example.task.presentation.ui.expiredprducts.fragments.ExpiredProductsFragment"
        android:label="Expired Products"
        tools:layout="@layout/fragment_expired_products"/>


</navigation>